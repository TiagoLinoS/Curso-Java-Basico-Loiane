package com.tiago.cursojava.aula10;

public class Variaveis {

	public static void main(String[] args) {

		//Convenção Java
		int idade = 20;
		String nome = "Tiago";
		String nomeDoMeuCachorro = "Rub";
		String ano2014 = "2014";
		
		//Pode-se declarar assim, porém não é utilizado
		int _idade;
		int $idade;
		
		/* Aqui mostra que o Java é case sensitive. Porém não é correto utilizar
		deste modo, mas sim como 'nomeDoMeuCachorro', porque não são convenção Java.
		String nome_do_meu_cachorro;
		String NomeDoMeuCachorro;
		String nomeDoMeucachorro;
		*/
		
		idade = 41;
		
		System.out.println("Idade = " + idade);
		System.out.println("Nome = " + nome);
		
	}

}
